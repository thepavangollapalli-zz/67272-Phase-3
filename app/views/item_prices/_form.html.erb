<%= simple_form_for(@item_price) do |f| %>
  <%= f.error_notification %>

<h2>New Prices</h2>
  <div class="form-inputs">
  	<%= f.collection_select :item_id, Item.active.all, :id, :name, prompt: "Select item" %>
  	<%= f.input :price, as: :float %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Current Item Prices</h1>

<% if @item_prices.empty? %>
  <h2>N/A</h2>
  <h4>No prices present in database.</h4>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @item_prices.current.each do |item_price| %>
        <tr>
          <td><%= link_to "#{item_price.item.name}", item_path(item_price.item) %></td>
          <td><%= number_to_currency(item_price.price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>

<%= link_to 'New Item price', new_item_price_path %>

<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="row">
  		<div class="input-field col s12">
  			<%= f.collection_select :item_id, Item.active.all, :id, :name, prompt: "Select item" %>
  		</div>
  	</div>
  	<div class="row">
  		<div class="input-field col s12">
  			<%= f.input :quantity %>
  		</div>
  	</div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn waves-effect waves-light"%>
  </div>
<% end %>

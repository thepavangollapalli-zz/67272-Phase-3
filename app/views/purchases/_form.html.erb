<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.collection_select :item_id, Item.active.all, :id, :name, prompt: "Select item" %>
  	<%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
